<% layout('../layouts/mainlayout.ejs') -%>
<br/><br/>


<form action="/User/Update" method="POST">

    <h1><%= user.username  %></h1>  <br/>
    <input type='hidden' name="_id" value= '<%= user.username %>' />

    <table style="width:25%">

        <tr>
            <td height="50"><b>First Name:</b> </td>
            <td> <input type='text'  name="firstName"
                        value="<%= user.firstName ? user.firstName: '' %>"  /></td>
        </tr>

        <tr>
            <td><b>Last Name:</b></td>

            <td>  <input type='text'  name="lastName"
                         value="<%= user.lastName ? user.lastName: '' %>"  /></td>
        </tr>


        <tr>
            <td><b> Email:</b></td>

            <td>  <input type='text'  name="email"
                         value="<%= user.email ? user.email: '' %>"  /></td>
        </tr>

            <td></td>
            <td height="75"><input type="submit" value="Submit" class="btn btn-primary btn-lg btn-block btn-sm"></td></tr>
        <tr>
            <td></td>
            <td><a href="/Movies/Index" class="btn btn-primary btn-lg btn-block btn-sm">Cancel</a></td>
        </tr>
    </table>
</form>

<%= errorMessage %>
